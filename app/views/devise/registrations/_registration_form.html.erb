<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login-form' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, label: false  do %>
      <%= f.input_field :username, placeholder: 'Username', class: 'form-control' %>
      <div class="wrapper-icon">
      	<i class="fa fa-user"></i>
      </div>
    <% end %>

    <%= f.input :email, required: true, autofocus: true, label: false  do %>
      <%= f.input_field :email, placeholder: 'Email Address', class: 'form-control' %>
      <div class="wrapper-icon">
      	<i class="fa fa-envelope"></i>
      </div>
    <% end %>

    <%= f.input :password, label: false, required: true do %>
      <%= f.input_field :password, placeholder: "Password", class: 'form-control password' %>
      <div class="wrapper-icon">
      	<i class="fa fa-unlock-alt" aria-hidden="true"></i>
    	</div>
    <% end %>

    <%= f.input :password, label: false, required: true do %>
      <%= f.input_field :password_confirmation, placeholder: "Confirm Password", class: 'form-control password' %>
      <div class="wrapper-icon">
      	<i class="fa fa-unlock-alt" aria-hidden="true"></i>
    	</div>
    <% end %>
  </div>
	<br>
  <%= button_tag "Register", type: :submit, class: 'btn-base btn-red' %>
<% end %>