
<br><br><br>

<div class="container">
  <div class="row">
    <div class="wrapper-login">

      <%= render 'login_social_media' %>

      <%= render 'login_form' %>

    <div class="or-separator">
      <span class="h6 or-separator-text">or</span>
      <hr>
    </div>

    <br>

      <div class="new-account">
