// Override default behavior of card-link to page reload
$(".card-link").click(function(e){
	e.preventDefault();
	e.stopPropagation();
	location.reload(true);
});

// Reload after 5 seconds
setTimeout(function() {
	location.reload(true);
}, 2000);

