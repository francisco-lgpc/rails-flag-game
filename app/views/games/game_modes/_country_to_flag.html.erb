

<%#= image_tag @countries.first.flag %>



<% if @question.nil? %>


  <div class="text-center">
    <h2> You scored <%= @game.score %> points! </h2>
    <br>
    <%= link_to 'Play Again', games_path(game_mode: 1), method: :post, class: 'btn btn-primary' %>
  </div>


<% else %>

  <hr>

  <div class="text-center">
    <h2> <%= @question.answer.country.name %> </h2>
  </div>

  <hr>

  <div class="wrapper-choices">
    <div class="row">
      <% @question.choices.each do |choice| %>
        <div class="col-md-3 col-xs-4">
          <div class="flag-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= image_path choice.country.flag %>);">
            <%= link_to question_attempts_path(@question, country_id: choice.country.id), method: :post, class: 'card-link' do %><% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>


<% end %>
