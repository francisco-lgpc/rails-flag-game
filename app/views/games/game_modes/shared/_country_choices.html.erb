
<div class="wrapper-std">
  <div class="row">
    <% question[:choices].each_with_index do |choice, i| %>
      <div class="col-md-3 col-xs-4">
        <div class="flag-card" style="background-image: linear-gradient(<%= colors[:transparent_sand] %>, <%= colors[:light_grey] %>), url("");">
          <div class="card-text">
            <p> <%= choice.name %> </p>
          </div>
          <%= link_to games_attempts_path(game, question_idx: question[:question],country_id: choice.id), method: :post, remote: true, class: "card-link #{i}" do %><% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>