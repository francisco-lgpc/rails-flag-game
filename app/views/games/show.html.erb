<div class="container">

  <div class="header-game">
    <p class='text-center'> <%= @game.mode_name %> </h1>
    <p class="header-elem-score hidden-xxs">Score: <%= session[:game]['score'] %> </p>
  </div>

<% if @question.nil? %>


  <div class="text-center">
    <h2> You scored <%= session[:game]['score'] %> points! </h2>
    <br>
    <%= link_to 'Play Again', games_path(game_mode: @game.mode), method: :post, class: 'btn btn-primary' %>
  </div>


<% else %>

  <%= render "games/game_modes/#{@game.mode_path}", game: @game, question: @question %>

<% end %>


</div>
